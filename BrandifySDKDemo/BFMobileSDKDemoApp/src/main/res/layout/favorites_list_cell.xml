<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/fav_list_content1"
        android:layout_height="wrap_content"
        android:layout_width="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/favorites_list_pin"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/green_pin"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fav_list_content2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/fav_list_content1"
        android:layout_toEndOf="@id/fav_list_content1"
        android:layout_marginTop="15dp" android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/favorites_list_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:text="Title"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/favorites_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="11dp" android:textColor="#000000"/>
        <TextView
            android:id="@+id/favorites_list_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City, State Zip"
            android:textSize="11dp" android:textColor="#000000"/>
        <TextView
            android:id="@+id/favorites_list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="11dp" android:textColor="#000000"/>
    </LinearLayout>

</RelativeLayout>